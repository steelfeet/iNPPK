<MenuScreen@Screen>:
    name: "menu"
            
    MDBoxLayout:
        # Add padding and spacing
        orientation: 'vertical'
        size_hint_y: None
        padding: 5
        spacing: 5
        size: root.size

        MDToolbar:
            title: "iNPPK"
            left_action_items: [["menu", lambda x: app.callback()]]
            #right_action_items: [["dots-vertical", lambda x: app.callback()], ["clock", lambda x: app.callback_2()]]
            height: dp(30)
            md_bg_color: rgba("#5C96E0")
            #font_size: 10

            MDLabel:
                id: toolbar_clock
                halign: "right"
                color: (3.0, 3.0, 3.0, 1.0)


        Image:
            source: "header.jpg"
            size_hint_y: None
            width: self.width
            allow_stretch: True

        MDFillRoundFlatButton:
            on_press: app.screen_manager.current = 'dish_list'
            text: "Дневник питания"
            font_size: 20
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#5C96E0")

        MDFillRoundFlatButton:
            on_press: app.screen_manager.current = 'action_list'
            text: "Дневник событий"
            font_size: 20
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#5C96E0")

        MDFillRoundFlatButton:
            on_press: app.screen_manager.current = 'read_list'
            text: "Читательский дневник"
            font_size: 20
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#5C96E0")

        MDFillRoundFlatButton:
            on_press: app.screen_manager.current = 'vacancies_list'
            text: "Вакансии"
            font_size: 20
            md_bg_color: rgba("#2196F3")
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#5C96E0")


        MDFillRoundFlatButton:
            on_press: app.screen_manager.current = 'result_list'
            text: "Результаты"
            font_size: 20
            md_bg_color: rgba("#97CF70")
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}







