<DishList2>:
    name: "dish_list2"

    MDBoxLayout:
        # Add padding and spacing
        orientation: 'vertical'
        size_hint_y: None
        padding: 5
        spacing: 5
        size: root.size

        MDToolbar:
            title: "Питание - iNPPK"
            left_action_items: [["menu", lambda x: app.callback()]]
