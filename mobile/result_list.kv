<ResultList>:
    name: "result_list"

    MDBoxLayout:
        # Add padding and spacing
        orientation: 'vertical'
        size_hint_y: None
        padding: 5
        spacing: 5
        size: root.size

        MDToolbar:
            title: "iNPPK"
            left_action_items: [["menu", lambda x: app.callback()]]
            #right_action_items: [["dots-vertical", lambda x: app.callback()], ["clock", lambda x: app.callback_2()]]
            height: dp(30)
            md_bg_color: app.theme_cls.primary_color
            font_size: 10

            MDLabel:
                id: toolbar_clock
                halign: "right"
                color: (3.0, 3.0, 3.0, 1.0)

        Image:
            source: "header.jpg"
            size_hint_y: None
            width: self.width
            allow_stretch: True

        #Список результатов






        MDFillRoundFlatButton:
            font_size: 20
            text: "Результат за сутки"
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#4575CA")

        MDFillRoundFlatButton:
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(50)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#95F0CA")

            MDBoxLayout:
                orientation: 'horizontal'
                padding: 5

                MDBoxLayout:
                    padding: 5
                    size_hint_x: 0.3
                MDFillRoundFlatButton:
                    on_press: app.screen_manager.current = 'add_result'
                    text: "Ум"
                    font_size: 20
                    text_color: rgba("#000000")
                    size_hint_y: None
                    height: dp(40)
                    md_bg_color: rgba("#0000FF")

                MDBoxLayout:
                    padding: 5
                    size_hint_x: 0.3
                MDFillRoundFlatButton:
                    on_press: app.screen_manager.current = 'add_result'
                    text: "Эмоции"
                    font_size: 20
                    text_color: rgba("#000000")
                    size_hint_y: None
                    height: dp(40)
                    md_bg_color: rgba("#00FF00")

                MDBoxLayout:
                    padding: 5
                    size_hint_x: 0.3
                MDFillRoundFlatButton:
                    on_press: app.screen_manager.current = 'add_result'
                    text: "Здоровье"
                    font_size: 20
                    text_color: rgba("#000000")
                    size_hint_y: None
                    height: dp(40)
                    md_bg_color: rgba("#FF0000")



        MDFillRoundFlatButton:
            font_size: 20
            text: "Результат за неделю"
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#4575CA")

        Image:
            source: "daily-graph.jpg"
            size_hint_y: None
            width: self.width
            allow_stretch: True







        MDFillRoundFlatButton:
            on_press: app.screen_manager.current = 'menu'
            text: "< Назад в главное меню"
            font_size: 20
            md_bg_color: app.theme_cls.primary_light
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}


        Widget:    