<ResultList>:
    name: "result_list"
    _app: app

    MDBoxLayout:
        # Add padding and spacing
        orientation: 'vertical'
        size_hint_y: None
        padding: 5
        spacing: 5
        size: root.size

        MDToolbar:
            title: "iNPPK"
            left_action_items: [["menu", lambda x: app.callback()]]
            #right_action_items: [["dots-vertical", lambda x: app.callback()], ["clock", lambda x: app.callback_2()]]
            height: dp(30)
            md_bg_color: rgba("#5C96E0")
            font_size: 10

            MDLabel:
                id: toolbar_clock
                halign: "right"
                color: (3.0, 3.0, 3.0, 1.0)

        Image:
            source: "header.jpg"
            size_hint_y: None
            width: self.width
            allow_stretch: True

        #Список результатов






        MDFillRoundFlatButton:
            font_size: 20
            text: "Результат за сутки"
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#6D7CD6")

        MDFillRoundFlatButton:
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(50)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#5C96E0")

            MDBoxLayout:
                orientation: 'horizontal'
                padding: 5

                MDBoxLayout:
                    padding: 5
                    size_hint_x: 0.3
                MDFillRoundFlatButton:
                    on_press: root.add_result(1)
                    text: "Ум"
                    font_size: 20
                    text_color: rgba("#000000")
                    size_hint_y: None
                    height: dp(40)
                    md_bg_color: rgba("#E0C858")

                MDBoxLayout:
                    padding: 5
                    size_hint_x: 0.3
                MDFillRoundFlatButton:
                    on_press: root.add_result(2)
                    text: "Эмоции"
                    font_size: 20
                    text_color: rgba("#000000")
                    size_hint_y: None
                    height: dp(40)
                    md_bg_color: rgba("#BE82FF")

                MDBoxLayout:
                    padding: 5
                    size_hint_x: 0.3
                MDFillRoundFlatButton:
                    on_press: root.add_result(3)
                    text: "Здоровье"
                    font_size: 20
                    text_color: rgba("#000000")
                    md_bg_color: rgba("#E0C858")
                    size_hint_y: None
                    height: dp(40)
                    md_bg_color: rgba("#97CF70")



        MDFillRoundFlatButton:
            font_size: 20
            text: "Результат за неделю"
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#6D7CD6")

        Image:
            source: "daily-graph.jpg"
            size_hint_y: None
            width: self.width
            allow_stretch: True







        MDFillRoundFlatButton:
            on_press: app.screen_manager.current = 'menu'
            text: "< Назад в главное меню"
            font_size: 20
            md_bg_color: rgba("#6D7CD6")
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}

          


        Widget:    