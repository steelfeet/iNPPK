<SettingsList>:
    name: "settings_list"
    _app: app

    MDBoxLayout:
        # Add padding and spacing
        orientation: 'vertical'
        size_hint_y: None
        padding: 5
        spacing: 5
        size: root.size

        MDToolbar:
            title: "Настройки"
            left_action_items: [["menu", lambda x: app.callback()]]
            #right_action_items: [["dots-vertical", lambda x: app.callback()], ["clock", lambda x: app.callback_2()]]
            height: dp(30)
            md_bg_color: app.theme_cls.primary_color
            font_size: 10

            MDLabel:
                id: toolbar_clock
                halign: "right"
                color: (3.0, 3.0, 3.0, 1.0)

        Image:
            source: "header.jpg"
            size_hint_y: None
            width: self.width
            allow_stretch: True

        #Список результатов




        MDTextField:
            id: tm_id
            hint_text: "TM ID"
            helper_text: ""
            helper_text_mode: "on_focus"
            size_hint_x: 0.9
            font_size: 20
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}
            mode: "rectangle"


        MDTextField:
            id: vk_id
            hint_text: "VK ID"
            helper_text: ""
            helper_text_mode: "on_focus"
            size_hint_x: 0.9
            font_size: 20
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}
            mode: "rectangle"


        MDFillRoundFlatButton:
            on_press: root.save_settings()
            font_size: 20
            text: "Ok"
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#4575CA")




        MDFillRoundFlatButton:
            on_press: app.screen_manager.current = 'menu'
            text: "< Назад в главное меню"
            font_size: 20
            md_bg_color: app.theme_cls.primary_light
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}


        Widget:    