<SettingsList>:
    name: "settings_list"
    _app: app

    MDBoxLayout:
        # Add padding and spacing
        orientation: 'vertical'
        size_hint_y: None
        padding: 5
        spacing: 5
        size: root.size

        MDToolbar:
            title: "Настройки"
            left_action_items: [["menu", lambda x: app.callback()]]
            #right_action_items: [["dots-vertical", lambda x: app.callback()], ["clock", lambda x: app.callback_2()]]
            height: dp(30)
            md_bg_color: rgba("#5C96E0")
            font_size: 10

            MDLabel:
                id: toolbar_clock
                halign: "right"
                color: (3.0, 3.0, 3.0, 1.0)

        Image:
            source: "header.jpg"
            size_hint_y: None
            width: self.width
            allow_stretch: True

        MDFillRoundFlatButton:
            id: mdl_notify
            text: ""
            font_size: 20
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#FFFFFF")
            text_color: rgba("#97CF70")
            



        MDTextField:
            id: tm_id
            hint_text: "TM ID"
            helper_text: ""
            helper_text_mode: "on_focus"
            size_hint_x: 0.9
            font_size: 20
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}
            mode: "rectangle"


        MDTextField:
            id: vk_id
            hint_text: "VK ID"
            helper_text: ""
            helper_text_mode: "on_focus"
            size_hint_x: 0.9
            font_size: 20
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}
            mode: "rectangle"

        MDBoxLayout:
            orientation: 'horizontal'
            padding: 3
            MDCheckbox:
                id : is_model            
            MDLabel:
                text: "Модель #1"

        MDBoxLayout:
            orientation: 'horizontal'
            padding: 3
            MDCheckbox:
                id : is_prod  
            MDLabel:
                text: "Режим разработки"




        Widget:
        
        MDFillRoundFlatButton:
            on_press: root.save_settings()
            font_size: 20
            text: "Ok"
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#5C96E0")
            




        MDFillRoundFlatButton:
            on_press: app.screen_manager.current = 'menu'
            text: "< Назад в главное меню"
            font_size: 20
            md_bg_color: rgba("#6D7CD6")
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}


        Widget:    