#список распознанных рецептов с выбором
<PhotoFoodRec>:
    name: "photo_food_rec"
    _app: app

    MDBoxLayout:
        # Add padding and spacing
        orientation: 'vertical'
        size_hint_y: None
        padding: 5
        spacing: 5
        size: root.size

        MDToolbar:
            title: "Распознание"
            left_action_items: [["menu", lambda x: app.callback()]]
            #right_action_items: [["dots-vertical", lambda x: app.callback()], ["clock", lambda x: app.callback_2()]]
            height: dp(30)
            md_bg_color: app.theme_cls.primary_color
            font_size: 10

            MDLabel:
                id: toolbar_clock
                halign: "right"
                color: (3.0, 3.0, 3.0, 1.0)

        Image:
            source: "header.jpg"
            size_hint_y: None
            width: self.width
            allow_stretch: True


        #Список сьеденного
        MDFillRoundFlatButton:
            text: "Выберите подходящие"
            font_size: 20
            md_bg_color: rgba("#4575CA")
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5} 

        MDFillRoundFlatButton:
            #реальный выбор
            on_press: root.select_dish(0)
            #переход на презентационный вариант с макаронами
            #on_press: app.screen_manager.current = 'dish_list2'
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(60)
            pos_hint: {"center_x": .5}
            
            MDBoxLayout:
                orientation: 'horizontal'
                padding: 3
                pos_hint: {"center_x": 0}

                AsyncImage:
                    id: rec_im_1
                    source:"recogn1.jpg"
                    pos_hint: {"center_x": 0.5}
                    size_hint_x: 0.3

                MDBoxLayout:
                    orientation: 'vertical'
                    padding: 5
                    Label:
                        id: title_1
                        text:"Макароны по-флотски"
                        font_size: 20
                    Label:
                        id: data_1
                        text:"Калорий: 320; Б: 7,2 г. Ж: 17 г. У: 54 г."
                        font_size: 12


