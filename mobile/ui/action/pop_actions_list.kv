<PopActionsList>:
    name: "pop_actions_list"
    _app: app

    MDBoxLayout:
        # Add padding and spacing
        orientation: 'vertical'
        size_hint_y: None
        padding: 5
        spacing: 5
        size: root.size

        MDToolbar:
            title: "Популярные События - iNPPK"
            left_action_items: [["menu", lambda x: app.callback()]]
            #right_action_items: [["dots-vertical", lambda x: app.callback()], ["clock", lambda x: app.callback_2()]]
            height: dp(30)
            md_bg_color: app.theme_cls.primary_color
            font_size: 10

            MDLabel:
                id: toolbar_clock
                halign: "right"
                color: (3.0, 3.0, 3.0, 1.0)

        Image:
            source: "header.jpg"
            size_hint_y: None
            width: self.width
            allow_stretch: True

        
        
        
        MDFillRoundFlatButton:
            font_size: 20
            text: "Популярные События"
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#4575CA")

        MDFillRoundFlatButton:
            on_press: root.add_pop(0)
            id: title_0
            text: " "
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(30)
            pos_hint: {"center_x": .5}

        MDFillRoundFlatButton:
            on_press: root.add_pop(1)
            id: title_1
            text: " "
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(30)
            pos_hint: {"center_x": .5}

        MDFillRoundFlatButton:
            on_press: root.add_pop(2)
            id: title_2
            text: " "
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(30)
            pos_hint: {"center_x": .5}
            
        MDFillRoundFlatButton:
            on_press: root.add_pop(3)
            id: title_3
            text: " "
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(30)
            pos_hint: {"center_x": .5}
            
        MDFillRoundFlatButton:
            on_press: root.add_pop(4)
            id: title_4
            text: " "
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(30)
            pos_hint: {"center_x": .5}


        MDFillRoundFlatButton:
            on_press: app.screen_manager.current = 'action_list'
            text: "< Назад к Событиям"
            font_size: 20
            md_bg_color: app.theme_cls.primary_light
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}



        MDFillRoundFlatButton:
            on_press: app.screen_manager.current = 'menu'
            text: "<< Назад в главное меню"
            font_size: 20
            md_bg_color: app.theme_cls.primary_light
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}

    


