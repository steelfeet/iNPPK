<ActionList>:
    name: "action_list"
    _app: app

    MDBoxLayout:
        # Add padding and spacing
        orientation: 'vertical'
        size_hint_y: None
        padding: 5
        spacing: 5
        size: root.size

        MDToolbar:
            title: "События - iNPPK"
            left_action_items: [["menu", lambda x: app.callback()]]
            #right_action_items: [["dots-vertical", lambda x: app.callback()], ["clock", lambda x: app.callback_2()]]
            height: dp(30)
            md_bg_color: rgba("#5C96E0")
            font_size: 10

            MDLabel:
                id: toolbar_clock
                halign: "right"
                color: (3.0, 3.0, 3.0, 1.0)

        Image:
            source: "header.jpg"
            size_hint_y: None
            width: self.width
            allow_stretch: True

        
        
        
        MDFillRoundFlatButton:
            font_size: 20
            text: "Рекомендуем *"
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#6D7CD6")

        MDFillRoundFlatButton:
            id: title_reccom_0
            text: " "
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(30)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#5C96E0")

        MDFillRoundFlatButton:
            id: title_reccom_1
            text: " "
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(30)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#5C96E0")

        MDFillRoundFlatButton:
            id: title_reccom_2
            text: " "
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(30)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#5C96E0")

        
        MDFillRoundFlatButton:
            on_press: app.screen_manager.current = 'pop_actions_list'
            text: "< Выбрать из Популярных >"
            font_size: 20
            md_bg_color: rgba("#6D7CD6")
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}                 


        MDTextField:
            id: action_text
            hint_text: "Введите название события"
            helper_text: ""
            helper_text_mode: "on_focus"
            size_hint_x: 0.9
            font_size: 20
            size_hint_y: None
            height: dp(30)
            pos_hint: {"center_x": .5}
            mode: "rectangle"

        
               
        MDFillRoundFlatButton:
            on_press: root.add_action()
            text: "Добавить"
            font_size: 20
            md_bg_color: rgba("#97CF70")
            text_color: rgba("#FFFFEB")
            size_hint_y: None
            pos_hint: {"center_x": .5}
            height: dp(40) 
            


        #Список результатов
        MDFillRoundFlatButton:
            text: "Последние события"
            font_size: 20
            md_bg_color: rgba("#6D7CD6")
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5} 

        MDFillRoundFlatButton:
            id: title_1
            text: "9 Apr 18:17 - Делаю ДЗ"
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(30)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#5C96E0")

        MDFillRoundFlatButton:
            id: title_2
            text: "8 Apr 18:27 - Делаю ДЗ"
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(30)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#5C96E0")
            
        MDFillRoundFlatButton:
            id: title_3
            text: "7 Apr 18:31 - Делаю ДЗ"
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(30)
            pos_hint: {"center_x": .5}
            md_bg_color: rgba("#5C96E0")
            
        MDFillRoundFlatButton:
            on_press: app.screen_manager.current = 'result_list'
            text: " Результат >"
            font_size: 20
            md_bg_color: rgba("#97CF70")
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}

        MDFillRoundFlatButton:
            on_press: app.screen_manager.current = 'menu'
            text: "< Назад в главное меню"
            font_size: 20
            md_bg_color: rgba("#6D7CD6")
            size_hint_x: 1.0
            size_hint_y: None
            height: dp(40)
            pos_hint: {"center_x": .5}

    


