<ManagerScreens@ScreenManager>:
    
    MenuScreen:
        id: menu
    
    DishList:
        id: dish_list
    AddFood:
        id: add_food

    ReadList:
        id: read_list


    ActionList:
        id: action_list


    MusicList:
        id: music_list


    SleepingMode:
        id: music_list

    ResultList:
        id: result_list




<MenuScreen@Screen>:
    name: "menu"

        
            
    MDBoxLayout:
        # Add padding and spacing
        orientation: 'vertical'
        size_hint_y: None
        padding: 5
        spacing: 5
        size: root.size

        MDToolbar:
            title: "iNPPK"
            left_action_items: [["menu", lambda x: app.callback()]]
            #right_action_items: [["dots-vertical", lambda x: app.callback()], ["clock", lambda x: app.callback_2()]]
            height: dp(30)
            md_bg_color: app.theme_cls.primary_color
            font_size: 10

            MDLabel:
                id: toolbar_clock
                halign: "right"
                color: (3.0, 3.0, 3.0, 1.0)


        Image:
            source: "header.jpg"
            size_hint_y: None
            width: self.width
            allow_stretch: True

        Button:
            on_press: app.screen_manager.current = 'action_list'
            text: "Дневник событий"
            color: .3, .3, 0.3, 1
            size_hint_y: None
            height: dp(40)
            font_size: 20
            background_color: app.theme_cls.bg_normal

        Button:
            on_press: app.screen_manager.current = 'read_list'
            text: "Читательский дневник"
            color: .3, .3, .3, 1
            size_hint_y: None
            height: dp(40)
            font_size: 20
            background_color: (2.6, 2.3, 1.7, 1.0)

        Button:
            on_press: app.screen_manager.current = 'dish_list'
            text: "Дневник питания"
            color: .3, .3, .3, 1
            size_hint_y: None
            height: dp(40)
            font_size: 20
            background_color: .3, 1.9, .2, 1

        Button:
            on_press: app.screen_manager.current = 'music_list'
            text: "Музыкальный Дневник"
            color: .3, .3, .3, 1
            size_hint_y: None
            height: dp(40)
            font_size: 20
            background_color: (1.6, 1.6, 2.6, 1.0)

        Button:
            on_press: app.screen_manager.current = 'sleeping_mode'
            text: "Режим Сна"
            color: .3, .3, .3, 1
            size_hint_y: None
            height: dp(40)
            font_size: 20
            background_color: (2.6, 2.6, 0.6, 1.0)

        Button:
            on_press: app.screen_manager.current = 'result_list'
            text: "Результаты и Цели"
            color: .3, .3, .3, 1
            size_hint_y: None
            height: dp(40)
            font_size: 20
            background_color: (2.6, 2.6, 2.6, 1.0)

        Widget:    
    BoxLayout:
        # Add padding and spacing
        orientation: 'horizontal'
        size_hint_y: None
        padding: 5
        spacing: 5

        Button:
            on_press: app.screen_manager.current = 'settings'
            text: "Настройки"
            color: .3, .3, .3, 1
            size_hint_x: None
            height: dp(40)
            font_size: 20
            background_color: (2.6, 0.3, 0.3, 1.0)

        Widget:    

    Widget:                


<DishList>:
    name: "dish_list"

    BoxLayout:
        orientation: 'vertical'
        padding: 5
        spacing: 5

        Button:
            text: '< Назад в главное меню'
            on_press: app.screen_manager.current = 'menu'
            size_hint_y: None
            height: dp(40)

        Button:
            text: "Добавить блюдо в дневник питания"
            on_press: app.screen_manager.current = 'add_food'
            height: dp(40)


        RecycleView:
            id: rv
            key_viewclass: 'viewclass'
            key_size: 'height'
            RecycleBoxLayout:
                default_size: None, dp(40)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'





<AddFood>:
    name: "add_food"
    _app: app

    BoxLayout:
        orientation: 'vertical'

        Button:
            text: '< Назад в главное меню'
            on_press: app.screen_manager.current = 'menu'
            size_hint_y: None
            height: dp(40)
        TextInput:
            id: field_food
            multiline: False
            height: dp(40)
            size_hint_y: None
            hint_text: "Название блюда"
        Button:
            text: "Добавить блюдо"
            size_hint_y: None
            height: dp(40)
            on_press:
                if field_food.text != '': root.button_clicked(field_food.text); \
                field_food.text = ''
        Label:
            id: result_label



<ReadList>:
    name: "read_list"
    _app: app

    BoxLayout:
        orientation: 'vertical'
        padding: 5
        spacing: 5

        Button:
            text: '< Назад в главное меню'
            on_press: app.screen_manager.current = 'menu'
            size_hint_y: None
            height: dp(40)






